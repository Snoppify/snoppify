{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@": ["src/"]
    },
    "typeRoots": ["./node_modules/@types", "server/ts"],
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "server/**/*",
    // Needed to please eslint ðŸ¤·
    ".eslintrc.js",
    "*.js"
  ]
}

{
  "name": "snoppify2",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.ts",
  "scripts": {
    "serve": "vue-cli-service build --watch --port 8080",
    "build": "vue-cli-service build --dest dist",
    "lint": "vue-cli-service lint",
    "build-server": "tsc --build tsconfig.server.json",
    "server": "node server-dist/",
    "watch-server": "npm-watch server",
    "start-server": "concurrently \"npm run build-server -- --watch\" \"npm run watch-server\"",
    "start-electron": "tsc -p electron/ && cp electron/index.html electron-dist/ && electron ./electron-dist/main.js",
    "start-app": "concurrently \"npm run start-server\" \"npm run build -- --watch\""
  },
  "watch": {
    "server": {
      "patterns": [
        "server-dist",
        "snoppify-config.js",
        ".env"
      ]
    },
    "quiet": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mold/snoppify.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mold/snoppify/issues"
  },
  "homepage": "https://github.com/mold/snoppify#readme",
  "dependencies": {
    "@types/spotify-api": "0.0.1",
    "app-root-path": "^2.1.0",
    "axios": "^0.19.0",
    "body-parser": "^1.18.3",
    "connect-loki": "^1.1.0",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.0.0",
    "express": "^4.17.1",
    "express-debug": "^1.1.1",
    "express-history-api-fallback": "^2.2.1",
    "express-session": "^1.16.2",
    "express-socket.io-session": "^1.3.5",
    "fingerprintjs2": "^1.8.1",
    "howler": "^2.0.15",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-spotify": "^1.0.1",
    "qrcode": "^1.4.2",
    "session-file-store": "^1.3.1",
    "socket.io": "^2.1.1",
    "spotify-web-api-node": "^2.5.0",
    "vue": "^2.5.17",
    "vue-router": "^3.0.7",
    "vue-socket.io": "^2.1.1-b",
    "vuex": "^3.0.1",
    "write-file-atomic": "^3.0.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-session": "^1.15.13",
    "@types/express-socket.io-session": "^1.3.1",
    "@types/ip": "^1.1.0",
    "@types/minimist": "^1.2.0",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.6.8",
    "@types/passport": "^0.4.6",
    "@types/session-file-store": "^1.2.0",
    "@types/socket.io": "^1.4.38",
    "@vue/cli-plugin-babel": "^3.9.2",
    "@vue/cli-plugin-eslint": "^3.9.2",
    "@vue/cli-service": "^3.9.3",
    "@vue/eslint-config-prettier": "^4.0.1",
    "concurrently": "^4.1.0",
    "electron": "^7.2.4",
    "eslint": "^4.19.1",
    "eslint-plugin-vue": "^4.7.1",
    "minimist": "^1.2.3",
    "node-sass": "^4.9.0",
    "npm-watch": "^0.4.0",
    "prettier": "^1.18.2",
    "sass-loader": "^7.0.1",
    "typescript": "^3.5.3",
    "vue-template-compiler": "^2.5.17"
  }
